{
  "name": "my-blog",
  "version": "0.1.0",
  "description": "A simple blog API with users, posts, and comments",
  "entities": [
    {
      "name": "User",
      "description": "Blog user / author",
      "fields": [
        { "name": "email", "type": "string", "required": true, "unique": true },
        { "name": "name", "type": "string", "required": true },
        { "name": "bio", "type": "text", "required": false },
        { "name": "avatarUrl", "type": "string", "required": false },
        { "name": "isActive", "type": "boolean", "required": true, "default": true }
      ],
      "relations": [
        {
          "name": "posts",
          "type": "one-to-many",
          "target": "Post",
          "onDelete": "CASCADE"
        },
        {
          "name": "comments",
          "type": "one-to-many",
          "target": "Comment",
          "onDelete": "CASCADE"
        }
      ]
    },
    {
      "name": "Post",
      "description": "Blog post",
      "fields": [
        { "name": "title", "type": "string", "required": true },
        { "name": "slug", "type": "string", "required": true, "unique": true, "index": true },
        { "name": "content", "type": "text", "required": true },
        { "name": "excerpt", "type": "text", "required": false },
        {
          "name": "status",
          "type": "enum",
          "required": true,
          "default": "DRAFT",
          "enumValues": ["DRAFT", "PUBLISHED", "ARCHIVED"]
        },
        { "name": "publishedAt", "type": "datetime", "required": false },
        { "name": "viewCount", "type": "int", "required": true, "default": 0 }
      ],
      "relations": [
        {
          "name": "author",
          "type": "one-to-many",
          "target": "User",
          "foreignKey": "authorId",
          "onDelete": "CASCADE"
        },
        {
          "name": "comments",
          "type": "one-to-many",
          "target": "Comment",
          "onDelete": "CASCADE"
        }
      ]
    },
    {
      "name": "Comment",
      "description": "Comment on a post",
      "fields": [
        { "name": "body", "type": "text", "required": true },
        { "name": "isApproved", "type": "boolean", "required": true, "default": false }
      ],
      "relations": [
        {
          "name": "post",
          "type": "one-to-many",
          "target": "Post",
          "foreignKey": "postId",
          "onDelete": "CASCADE"
        },
        {
          "name": "author",
          "type": "one-to-many",
          "target": "User",
          "foreignKey": "authorId",
          "onDelete": "CASCADE"
        }
      ]
    }
  ],
  "modules": [],
  "settings": {
    "port": 3000,
    "database": "postgresql",
    "enableSwagger": true,
    "enableCors": true,
    "enableHelmet": true,
    "enableRateLimit": true,
    "docker": true
  }
}
