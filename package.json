{
  "name": "gyxer-studio",
  "version": "0.1.0",
  "private": true,
  "description": "Visual backend builder â€” generate production-ready NestJS apps",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w packages/schema && npm run build -w packages/generator && npm run build -w packages/editor && npm run build -w packages/cli",
    "dev": "npm run dev -w packages/editor",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx}\"",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.4.0",
    "typescript": "^5.7.0",
    "vitepress": "^1.6.4",
    "vitest": "^3.0.0"
  },
  "overrides": {
    "minimatch": "^10.2.1",
    "esbuild": "^0.25.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gyxer513/gyxer-studio.git"
  }
}
